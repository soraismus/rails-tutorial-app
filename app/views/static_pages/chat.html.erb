<% provide(:title, 'Chat') %>
<div class="row">
  <aside class="span4">
    <section>
      <%= render 'shared/user_info' %>
    </section>
    <section>
      <%= render 'shared/chat_form' %>
    </section>
  </aside>
  <div class="span8">
    <h3>Chat Window</h3>
    <section>
      <% if current_user.channels.any? %>
        <h5>Channels (<%= current_user.channels.count %>)</h5>
        <ol class="channels">
          <%= render partial: "channels/channel",
            collection: current_user.channels %>
        </ol>
      <% end %>
    </section>
  </div>
</div>
