<% provide(:title, 'Chat') %>

<%= render "shared/infrastructure" %>

<div class="row">
  <aside class="span4">
    <section>
      <%= render 'shared/user_info' %>
    </section>
    <section>
      <%= render 'shared/chat_form' %>
    </section>
    <section>
      <%= render 'shared/message_form' %>
